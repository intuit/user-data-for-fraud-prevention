{
  "name": "user-data-for-fraud-prevention",
  "version": "1.1.0",
  "description": "Detects Timezone, screen size, scaling factor, browser plugins, local device IPs etc;",
  "scripts": {
    "test": "jest",
    "build": "webpack",
    "test:coverage": "npm test -- --coverage && cat ./coverage/lcov.info | coveralls",
    "lint:fix": "eslint '{src,tests}/**/*.js' --fix",
    "lint": "eslint '{src,tests}/**/*.js'",
    "format": "lint-staged",
    "prettier": "prettier '{src,tests}/**/*.js' --write --single-quote --tab-width 4 --no-bracket-spacing --print-width 120",
    "clean": "rm -rf node_modules",
    "rebuild": "npm run clean && npm install && npm run build",
    "prepublishOnly": "webpack"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/intuit/user-data-for-fraud-prevention.git"
  },
  "main": "dist/bundle.js",
  "keywords": [
    "Fraud",
    "Prevention",
    "Headers"
  ],
  "author": "skodamarthi",
  "license": "ISC",
  "files": [
    "src/js/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.com/"
  },
  "dependencies": {
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/npm": "^8.0.0",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "all-contributors-cli": "^6.17.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.4.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.3.0",
    "jest": "^26.0.1",
    "jest-cli": "^26.1.0",
    "jest-coverage-badges": "^1.1.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react-addons-test-utils": "^15.6.2",
    "semantic-release": "^18.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/test/**"
    ]
  },
  "directories": {
    "test": "tests"
  }
}
